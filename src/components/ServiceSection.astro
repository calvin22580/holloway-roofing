---
const services = [
  {
    title: 'Flat Roofing',
    description: 'Expert installation and repair of flat roofs using high-quality EPDM rubber, GRP fiberglass, felt, and other modern materials for long-lasting protection.',
    icon: 'M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H6a2 2 0 00-2 2v8a2 2 0 002 2z'
  },
  {
    title: 'Roof Repairs',
    description: 'Comprehensive repair services for all types of roofs. We fix leaks, replace damaged tiles, repair flashing, and address structural issues to prevent future problems.',
    icon: 'M14.121 14.121L19 19m-7-7l7-7m-7 7l-2.879 2.879M12 12L9.121 9.121m0 5.758a3 3 0 10-4.243 4.243 3 3 0 004.243-4.243zm0 0L9.121 9.121'
  },
  {
    title: 'Commercial Roofing',
    description: 'Specialized roofing solutions for commercial buildings, including factories, warehouses, offices, and retail spaces. Minimal disruption to your business operations.',
    icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4'
  },
  {
    title: 'Roof Inspections',
    description: 'Detailed roof assessments to identify current and potential issues. Includes comprehensive reports and recommendations for necessary maintenance or repairs.',
    icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z'
  }
];
---

<div class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-slate-800 sm:text-4xl">
        Our Roofing Services
      </h2>
      <p class="mt-4 max-w-2xl text-lg text-gray-600 mx-auto">
        Professional roofing solutions tailored to your specific needs. We serve both residential and commercial clients throughout Cambridge.
      </p>
    </div>

    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      {services.map(service => (
        <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition-shadow duration-300">
          <div class="px-6 py-8">
            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-orange-500 text-white mx-auto">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon} />
              </svg>
            </div>
            <h3 class="mt-4 text-xl font-medium text-slate-800 text-center">{service.title}</h3>
            <p class="mt-3 text-base text-gray-600 text-center">
              {service.description}
            </p>
          </div>
          <div class="px-6 py-4 bg-gray-50">
            <a href={`/services#${service.title.toLowerCase().replace(/\s+/g, '-')}`} class="text-base font-medium text-orange-500 hover:text-orange-600 flex justify-center items-center">
              Learn more
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-10 text-center">
      <a href="/services" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-slate-800 hover:bg-slate-700">
        View All Services
      </a>
    </div>
  </div>
</div> 