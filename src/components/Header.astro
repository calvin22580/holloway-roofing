<header class="text-white py-3 px-3 sm:py-4 sm:px-4 lg:py-5 floating-header">
  <div class="w-full mx-auto">
    <!-- Centered container for logo and navigation -->
    <div class="flex flex-col items-center justify-center">
      <div class="content-container flex flex-col sm:flex-row items-center w-full shared-bg">
        <!-- Logo in center on mobile, left on desktop -->
        <div class="flex items-center justify-center text-center w-full sm:w-auto mb-0 sm:mb-0 sm:mr-6 md:mr-10 lg:mr-16">
          <a href="/" class="block">
            <img src="/l.png" alt="Holloway Roofing" class="h-8 sm:h-10 md:h-12 w-auto"/>
          </a>
        </div>
        
        <!-- Navigation for tablet and desktop -->
        <nav class="hidden sm:flex flex-wrap space-x-1 md:space-x-2">
          <a href="/" class="nav-link hover:text-orange-500 transition-colors">Home</a>
          <a href="/services" class="nav-link hover:text-orange-500 transition-colors">Services</a>
          <a href="/projects" class="nav-link hover:text-orange-500 transition-colors">Projects</a>
          <a href="/about" class="nav-link hover:text-orange-500 transition-colors">About Us</a>
          <a href="/blog" class="nav-link hover:text-orange-500 transition-colors">Blog</a>
          <a href="/contact" class="nav-link hover:text-orange-500 transition-colors">Contact</a>
        </nav>
      
        <!-- Mobile menu button - positioned top right with better tap target -->
        <div class="sm:hidden absolute right-5 top-4">
          <button id="menu-toggle" class="p-1 rounded-full bg-white/20 backdrop-blur-sm focus:outline-none hover:bg-white/30 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-slate-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile menu with smooth transition -->
    <div id="mobile-menu" class="hidden mt-2 z-50 transform transition-all duration-300 ease-in-out opacity-0 max-h-0 overflow-hidden sm:hidden">
      <div class="mobile-menu-bg rounded-xl p-4 shadow-lg">
        <div class="flex flex-col space-y-3">
          <a href="/" class="mobile-nav-link hover:text-orange-500 transition-colors">Home</a>
          <a href="/services" class="mobile-nav-link hover:text-orange-500 transition-colors">Services</a>
          <a href="/projects" class="mobile-nav-link hover:text-orange-500 transition-colors">Projects</a>
          <a href="/about" class="mobile-nav-link hover:text-orange-500 transition-colors">About Us</a>
          <a href="/blog" class="mobile-nav-link hover:text-orange-500 transition-colors">Blog</a>
          <a href="/contact" class="mobile-nav-link hover:text-orange-500 transition-colors">Contact</a>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .floating-header {
    max-width: 90%;
    margin: 0 auto;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
  }
  
  .content-container {
    max-width: 1400px;
    padding: 0.5rem 1rem;
  }
  
  .shared-bg {
    background-color: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(8px);
    border-radius: 50px;
    padding: 0.5rem 1rem;
    justify-content: space-between;
  }
  
  .mobile-menu-bg {
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
  }
  
  .text-shadow {
    text-shadow: 0px 1px 3px rgba(0, 0, 0, 0.5), 
                 0px 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  .nav-link {
    position: relative;
    font-weight: 500;
    padding: 0.5rem 0.75rem;
    text-shadow: 0px 1px 2px rgba(0, 0, 0, 0.3);
    color: rgba(0, 0, 0, 0.8);
    font-size: 0.9rem;
  }
  
  @media (min-width: 768px) {
    .nav-link {
      padding: 0.5rem 1rem;
      font-size: 1rem;
    }
  }
  
  .mobile-nav-link {
    position: relative;
    font-weight: 500;
    padding: 0.75rem 1rem;
    color: rgba(0, 0, 0, 0.8);
    display: block;
    font-size: 1.1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  .nav-link::after,
  .mobile-nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -2px;
    left: 0;
    background-color: #f97316;
    transition: width 0.3s ease;
  }
  
  .nav-link:hover::after,
  .mobile-nav-link:hover::after {
    width: 100%;
  }
  
  .menu-open {
    opacity: 1 !important;
    max-height: 300px !important;
  }
  
  /* Improve mobile-specific styling */
  @media (max-width: 640px) {
    .shared-bg {
      padding: 0.5rem 0.75rem;
    }
    
    .mobile-nav-link:last-child {
      border-bottom: none;
    }
  }
</style>

<script>
  document.getElementById('menu-toggle')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu?.classList.toggle('hidden');
    // Add a small delay before adding the transition classes
    setTimeout(() => {
      mobileMenu?.classList.toggle('menu-open');
    }, 10);
  });
</script> 